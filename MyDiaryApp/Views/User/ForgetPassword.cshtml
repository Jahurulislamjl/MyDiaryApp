
@{
    ViewBag.Title = "ForgetPassword";
}

<h2>ForgetPassword</h2>
<html>
<head>
    <style>
        body {
    margin: 0;
    padding: 0;
  
    background: #F0FFFF;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    font-family: sans-serif;
}
.box {
    width: 500px;
    height: 200px;
    background: white;
    opacity: .7;
    margin: auto;
    margin-top: 100px;
    box-sizing: border-box;
}
        .box input {
            width: 100%;
            margin-left: 100px;
            position: center;
        }

        .box h1 {
            margin: 1px;
            padding: 20px;
            text-align: center;
            font-size: 30px;
            font-family: 'Times New Roman', Times, serif;
        }
    </style>

</head>
<body>
    <div class="box">
        <h1>Forgotten password?</h1>
        <form method="post" action="~/User/ForgetPassword">
            <div class="form-group">
                <input type="text" name="phoneOrEmail" class="form-control" placeholder="Enter Email or Contact No" />

            </div>
            <div class="form-group">
                <input type="submit" />

            </div>
        </form>
    </div>
</body>
</html>

